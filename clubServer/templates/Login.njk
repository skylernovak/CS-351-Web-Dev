{% extends "base.njk" %}

{% block title %}
<title>Login - GSFB</title>
{% endblock %}

{% block pageHeader %}
<h1 class="pageHeader">Login</h1>
{% endblock %}

{% block main %}
<h1>Login</h1>
<div id="login-grid">
    <p>Email: <input type="text" id="username" name="login-username"></p>
    <p>Password: <input type="password" id="password-field" placeholder="password"></p>
    <input type="button" id="login-button" value="Login">
</div>

<script>
let loginbtn = document.getElementById("login-button");

function btnHandler() {
    let user_email = document.getElementById("username").value;
    let user_pword = document.getElementById("password-field").value;
    console.log("Email: " + user_email);
    console.log("Password: " + user_pword);
}

loginbtn.addEventListener('click', btnHandler);
</script>
{% endblock %}